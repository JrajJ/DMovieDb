<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.ProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlack</item>
        <!-- Action Bar Title Color -->
        <item name="titleTextColor">@color/gen_white</item>
        <item name="listPreferredItemHeightSmall">40dp</item>
        <item name="android:editTextColor">@android:color/white</item>

    </style>


</resources>
