<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:background="@color/gen_white"
    android:id="@+id/details_ll"
    android:layout_margin="@dimen/margin_8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <TextView
       android:padding="0dp"
       android:id="@+id/__MOVIE_DETAILS_NAME"
       android:text=""
       android:textStyle="bold"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textAlignment="viewStart"
       android:textSize="18sp"
       android:textColor="#000000"
       />

   <TextView
       android:layout_marginTop="@dimen/margin_4"
       android:layout_marginBottom="@dimen/margin_6"
       android:id="@+id/__MOVIE_DETAILS_TAGLINE"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/colorAccent"
       android:text=""
       android:textSize="15sp"
       android:lines="1"
       android:maxLines="2"
       android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

   <LinearLayout
       android:background="@color/gen_white"
       android:id="@+id/productContent"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <FrameLayout
          android:focusable="true"
          android:id="@+id/loadingPanel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center" >

         <ImageButton
             android:focusable="true"
             android:layout_gravity="center"
             android:id="@+id/__MOVIE_DETAILS_IMAGE"
             android:background="@android:color/transparent"
             android:adjustViewBounds="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:scaleType="fitCenter"
             />

         <ProgressBar
             android:id="@+id/movie_details_pb_circular"
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:progressDrawable="@drawable/progressbar_drawable"
             android:layout_height="wrap_content"
             android:indeterminate="true" />


      </FrameLayout>

      <LinearLayout
          android:layout_marginLeft="@dimen/margin_8"
          android:layout_marginStart="@dimen/margin_8"
          android:background="@color/gen_white"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >

         <TextView
             android:id="@+id/__MOVIE_DETAILS_RATING"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/gen_white"
             android:padding="@dimen/margin_4"
             android:background="@color/colorGreen"
             android:text=""
             android:textStyle="bold"
             android:textSize="15sp"
             android:typeface="sans"
             android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:padding="@dimen/margin_4"
                android:id="@+id/__MOVIE_DETAILS_VOTES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:text=""
                android:typeface="sans"
                android:textSize="15sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
            <TextView
                android:layout_marginTop="@dimen/margin_6"
                android:id="@+id/__MOVIE_DETAILS_GENRE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text=""
                android:typeface="sans"
                android:textSize="15sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:layout_marginTop="@dimen/margin_6"
                android:id="@+id/__MOVIE_DETAILS_RUNTIME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text=""
                android:typeface="sans"
                android:textSize="15sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />



         </LinearLayout>

         <LinearLayout
             android:layout_marginTop="@dimen/margin_6"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >


            <TextView
                android:id="@+id/__MOVIE_DETAILS_LANGUAGE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text=""
                android:typeface="sans"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/__MOVIE_DETAILS_DATE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:typeface="sans"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

         </LinearLayout>


         <TextView
             android:layout_marginTop="@dimen/margin_6"
             android:id="@+id/__MOVIE_DETAILS_PRDC_COMPANY_NAME"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#000000"
             android:text=""
             android:textSize="15sp"
             android:typeface="sans"
             android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


      </LinearLayout>

   </LinearLayout>
   <TextView
       android:layout_marginTop="@dimen/margin_6"
       android:id="@+id/__MOVIE_DETAILS_DESC"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text=""
       android:textSize="14sp"
       android:minLines="5"
       android:maxLines="6"
       android:textColor="@color/colorGrey"
       android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

   <TextView
       android:layout_marginTop="@dimen/margin_6"
       android:id="@+id/__MOVIE_DETAILS_BUDGET"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/colorAccent"
       android:text=""
       android:textSize="14sp"
       android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


   <TextView
       android:layout_marginTop="@dimen/margin_6"
       android:id="@+id/__MOVIE_DETAILS_REVENUE"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/colorAccent"
       android:text=""
       android:textSize="14sp"
       android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


   <TextView
       android:id="@+id/__MOVIE_DETAILS_ID"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginEnd="@dimen/margin_8"
       android:layout_marginLeft="@dimen/margin_8"
       android:layout_marginRight="@dimen/margin_8"
       android:layout_marginStart="@dimen/margin_8"
       android:layout_marginTop="@dimen/margin_8"
       android:textColor="#000000"
       android:text="Movie Id"
       android:visibility="gone"
       android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


   <TextView
       android:layout_marginTop="@dimen/margin_8"


       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#d7d7d7"/>

   <TextView
       android:layout_marginTop="@dimen/margin_10"

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Cast"
       android:textSize="15sp"
       android:textStyle="bold"
       android:textColor="@color/colorBlack"
       />

   <android.support.v7.widget.RecyclerView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/cast_rcv"
       />

   <TextView
       android:layout_marginTop="@dimen/margin_10"


       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#d7d7d7"/>

   <TextView
       android:layout_marginTop="@dimen/margin_10"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Crew"
       android:textSize="15sp"
       android:textStyle="bold"
       android:textColor="@color/colorBlack"

       />

   <android.support.v7.widget.RecyclerView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/crew_rcv"
       android:layout_marginBottom="@dimen/margin_10"
       />



</LinearLayout>
</android.support.v4.widget.NestedScrollView>
